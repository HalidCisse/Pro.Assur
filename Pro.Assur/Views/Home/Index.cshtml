
@using Pro.Assur.Models

@model Devis
@{
    ViewBag.Title = "Assurance Auto";
}


<div class="tel"><img src="~/images/tel.gif" /></div>
<div id="Content" margin="20">
    <div id="contentRight">
        <img src="~/images/malusses.png" style="padding-top: 15px;" />
        <p style="margin-top: 44px;">
            <div style="margin-bottom: 55px;">
                <img src="~/images/callback_fr_button.png" alt="" border="0" href="callto:0988188821"> />
            </div>
        </p>
        <p style="margin-top: 5px;" class="assures">
            <img src="~/images/derniers-assures.png" />
        </p>
    </div>

    <div id="contentLeft">
        <img src="~/images/femcar.jpg" alt="Assurance auto" title="Assurance auto" />
        <div id="Title"><b>Assurance auto : <font color="#FF6600">DEVIS EN LIGNE</font> et sans engagement !</b></div>

        @using (Html.BeginForm("Save", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div id="contentTitle">
                <b>Votre V&eacute;hicule!</b>
            </div>
            <div id="contentTitleInput">
                <table width="100%" border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td align="right" valign="middle">Mod&egrave;le du <strong>v&eacute;hicule</strong></td>
                        <td align="center" valign="middle">:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield2">
                                @Html.TextBoxFor(m => m.ModelVehicule, new {@class= "inpText", @id = "ModeCompletTxt", @name= "ModeCompletTxt" })                               
                                <span class="textfieldRequiredMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                    <tr>
                        <td align="right" valign="middle">Puissance fiscale</td>
                        <td align="center" valign="middle">:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield3">
                                @Html.TextBoxFor(m => m.PuissanceFiscale, new { @class = "inpText", @id = "PuissanceFiscaleTxt", @name = "PuissanceFiscaleTxt" })
                                @*<label>
                                        <input type="text" name="PuissanceFiscaleTxt" id="PuissanceFiscaleTxt" class="inpText" />
                                    </label>*@
                                <span class="textfieldRequiredMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                    <tr>
                        <td align="right" valign="middle">Date de <strong>mise en circulation</strong></td>
                        <td align="center" valign="middle">:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield4">
                                @Html.TextBoxFor(m => m.DateCirculation, new { @name = "MiseCirculationTxt", @id = "MiseCirculationTxt", @class = "inpText"})

                                <span class="textfieldRequiredMsg">x</span><span class="textfieldInvalidFormatMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                    <tr>
                        <td align="right" valign="middle">Date <strong>d'obtention du permis</strong></td>
                        <td align="center" valign="middle">:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield5">
                                @Html.TextBoxFor(m => m.DatePermis, new { @name = "DatePermisTxt", @id = "DatePermisTxt", @class = "inpText" })
                                @*<label>
                                        <input type="text" name="DatePermisTxt" id="DatePermisTxt" class="inpText" />
                                    </label>*@
                                <span class="textfieldRequiredMsg">x</span><span class="textfieldInvalidFormatMsg">x</span>
                            </span>*
                        </td>
                    </tr>

                    <tr>
                        <td align="right" valign="middle">Compagnie pr&eacute;c&eacute;dente/actuelle</td>
                        <td align="center" valign="middle">:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield7">
                                @Html.TextBoxFor(m => m.CompagnieActuelle, new { @name = "CompagniePrecedentActuelleTxt", @id = "CompagniePrecedentActuelleTxt", @class = "inpText" })

                                <span class="textfieldRequiredMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                </table>
            </div>

            <div id="contentTitle">
                <b>Motif de r&eacute;siliation de votre assurance auto !</b>
            </div>
            <div id="contentTitleInput">
                Veuillez indiquer votre <b>motif de r&eacute;siliation</b> : <span id="spryselect1">
                    @Html.DropDownListFor(model => model.MotifResiliation, new SelectList(Enum.GetValues(typeof(MotifResiliation)), MotifResiliation.Autres), new { @name = "ResiliationNonPaiementTxt", @id = "ResiliationNonPaiementTxt", @style= "width: 140px; padding: 2px;" })

                    <span class="selectRequiredMsg">S&eacute;lectionnez un &eacute;l&eacute;ment.</span>
                </span>
            </div>

            <div id="contentTitle">Vos ant&eacute;c&eacute;dents sur <b>36 derniers mois</b></div>

            <div id="contentTitleInput">
                <table width="60%" border="0" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td width="102" align="left" valign="middle">Responsables</td>
                        <td width="249" align="left" valign="middle">
                            @Html.DropDownListFor(model => model.Responsables, new SelectList(new List<string> {"Aucun", "1", "2", "3", "4", "5" }, "Aucun"), new { @name = "NombreSinistreResponsableTxt", @id = "NombreSinistreResponsableTxt", @class = "titreSel" })                         
                        </td>
                        <td width="81" align="left" valign="middle" nowrap="nowrap">Non responsables</td>
                        <td width="156" align="left" valign="middle">
                            @Html.DropDownListFor(model => model.NonResponsables, new SelectList(new List<string> { "Aucun", "1", "2", "3", "4", "5"}, "Aucun"), new { @name = "NombreSinistreNonResponsableTxt", @id = "NombreSinistreNonResponsableTxt", @class = "titreSel" })
                        </td>
                    </tr>

                </table>
            </div>

            <div id="contentTitle"><b>Vos coordonn&eacute;es!</b></div>

            <div id="contentTitleInput">
                <table class="tableau" cellpadding="0" cellspacing="0">
                    <tr>
                        <td align="left" valign="middle">Nom:<strong></strong></td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield1">
                                @Html.TextBoxFor(m => m.Nom, new { @name = "NomTxt", @id = "NomTxt", @class = "inpText" })

                                <span class="textfieldRequiredMsg">x</span>
                            </span>*
                        </td>
                        <td align="left" valign="middle">Pr&eacute;nom:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield8">
                                @Html.TextBoxFor(m => m.Prenom, new { @name = "PrenomTxt", @id = "PrenomTxt", @class = "inpText" })
                                <span class="textfieldRequiredMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                    <tr>
                        <td align="left" valign="middle">Date de naissance:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield14">
                                @Html.TextBoxFor(m => m.DateNaissance, new { @name = "Date_NaissanceTxt", @id = "Date_NaissanceTxt", @class = "inpText" })
                                <span class="textfieldRequiredMsg">x</span><span class="textfieldInvalidFormatMsg">x</span>
                            </span>*
                        </td>
                        <td align="left" valign="middle">&nbsp;</td>
                        <td align="left" valign="middle">&nbsp;</td>
                    </tr>

                    <tr>
                        <td align="left" valign="middle">Code postal:<strong></strong></td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield10">
                                @Html.TextBoxFor(m => m.CodePostal, new { @name = "CodePostalTxt", @id = "CodePostalTxt", @class = "inpText", @maxlength="5" })
                                <span class="textfieldRequiredMsg">x</span><span class="textfieldInvalidFormatMsg">x</span>
                            </span>*
                        </td>
                        <td align="left" valign="middle">Ville:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield11">
                                @Html.TextBoxFor(m => m.Ville, new { @name = "VilleTxt", @id = "VilleTxt", @class = "inpText" })
                                <span class="textfieldRequiredMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                    <tr>
                        <td align="left" valign="middle">T&eacute;l&eacute;phone:<strong></strong></td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield12">
                                @Html.TextBoxFor(m => m.Tel, new { @name = "Num_PersonnelTxt", @id = "Num_PersonnelTxt", @class = "inpText" })
                                <span class="textfieldRequiredMsg">x</span><span class="textfieldInvalidFormatMsg">x</span>
                            </span>*
                        </td>
                        <td align="left" valign="middle">Email:</td>
                        <td align="left" valign="middle">
                            <span id="sprytextfield13">
                                @Html.TextBoxFor(m => m.Email, new { @name = "EmailTxt", @id = "EmailTxt", @class = "inpText" })
                                <span class="textfieldRequiredMsg">x</span><span class="textfieldInvalidFormatMsg">x</span>
                            </span>*
                        </td>
                    </tr>
                </table>
            </div>

            <div style="padding: 10px; display: block; text-align: center">
                <label>
                    <input type="submit" name="Save" id="Save" value="Valider ma demande" style="padding: 8px; font-size: 14px;" />
                </label>
            </div>

            <div style="padding: 10px; display: block; text-align: center; clear: both; font-size: 9px; color: #999999;">
                Les informations demand&eacute;es sont n&eacute;cessaires pour obtenir une tarification exacte aupr&egrave;s de nos assureurs partenaires. Elles seront exploit&eacute;es pour tenter de vous fournir les meilleures offres d'assurances possibles. Conform&eacute;ment &agrave; la loi n&deg; 78-17 du 6 janvier 1978, vous b&eacute;n&eacute;ficiez d'un droit d'acc&egrave;s, de communication, de rectification ou suppression.<br />
                @Html.ActionLink("Log in", "Login", "Account", routeValues: new { returnUrl = "/home/Demandes" }, htmlAttributes: new { id = "loginLink" })
            </div>

        }

    </div>
    <script src="~/Scripts/SpryValidationTextField.js" type="text/javascript"></script>
    <script src="~/Scripts/SpryValidationSelect.js" type="text/javascript"></script>

    <script type="text/javascript">

var sprytextfield2 = new Spry.Widget.ValidationTextField("sprytextfield2");
